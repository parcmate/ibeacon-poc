doctype html
html(lang='en', ng-app='myBeacon')
  head
    title MyBeacon
    meta(charset='utf-8')
    meta(content='IE=edge,chrome=1', http-equiv='X-UA-Compatible')
    meta(content='yes', name='apple-mobile-web-app-capable')
    meta(content='user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimal-ui', name='viewport')
    meta(content='yes', name='apple-mobile-web-app-status-bar-style')
    meta(content='', name='description')
    link(href='http://fonts.googleapis.com/css?family=Lato:100,200,300,400,700,900', rel='stylesheet', type='text/css')
    link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css', rel='stylesheet', type='text/css')
    link(href='assets/css/main.css', rel='stylesheet', type='text/css')
  body(ng-controller='BeaconController')
    main.container
      ng-include(src='"partials/app.html"')

    script(src='js/vendor.js')
    script(src='js/sections.js')
    script(src='js/app.js')

    if liveReload
      script(src='//localhost:#{liveReloadPort}/livereload.js')
    if cordova
      script.
        var cordova = {
          initialize: function() {
              this.bindEvents();
          },
          bindEvents: function() {
              document.addEventListener('deviceready', this.onDeviceReady, true);
          },

          onDeviceReady: function() {
              cordova.receivedEvent('deviceready');
          }
        };

        cordova.initialize();
